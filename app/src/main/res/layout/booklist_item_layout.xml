<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_layout_height"
    android:background="#DCD3CC"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/iv_list_item_layout"
        android:layout_width="@dimen/list_item_layout_height"
        android:layout_height="@dimen/list_item_layout_height"
        android:focusable="true" />

    <TextView
        android:id="@+id/tv_list_item_title"
        android:layout_width="@dimen/list_item_title_layout_width"
        android:layout_height="@dimen/list_item_layout_height"
        android:layout_marginStart="@dimen/list_item_title_layout_margin_left"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/list_item_title_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_layout_height"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_item_layout_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_inner_textview_height"
            android:ellipsize="end"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_inner_textview_text_size" />

        <TextView
            android:id="@+id/tv_list_item_layout_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_inner_textview_height"
            android:ellipsize="end"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_inner_textview_text_size" />

        <TextView
            android:id="@+id/tv_list_item_layout_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_inner_textview_height"
            android:ellipsize="end"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_inner_textview_text_size" />

    </LinearLayout>

</LinearLayout>