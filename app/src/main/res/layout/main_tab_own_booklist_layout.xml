<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD3CC"
    android:orientation="vertical">

    <Button
        android:id="@+id/tv_own_booklist_add_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_layout_height"
        android:backgroundTint="#bb937E"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/list_add_new_book"
        android:textColor="@color/black"
        android:textSize="@dimen/list_add_book_btn_text_size" />

    <ListView
        android:id="@+id/listview_own_booklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:contextClickable="true"
        android:divider="@color/gray_600"
        android:dividerHeight="2dp"
        android:focusable="true" />


</LinearLayout>